{
  "id": "com.homewizardenergy",
  "name": {
    "en": "HomeWizard Energy"
  },
  "version": "0.0.1",
  "sdk": 2,
  "compatibility": ">=4.0",
  "description": {
    "en": "Control HomeWizard Energy using Homey"
  },
  "category": "appliances",
  "images": {
    "large": "assets/images/large.jpg",
    "small": "assets/images/small.jpg"
  },
  "author": {
    "name": "Jeroen Tebbens",
    "email": "jeroen@tebbens.net"
  },
  "contributors": {
    "developers": [
      {
        "name": "Jeroen Tebbens",
        "email": "jeroen@tebbens.net"
      }
    ]
  },
  "contributing": {
    "donate": {
      "paypal": {
        "username": "jtebbens"
      }
    }
  },
  "bugs": {
     "url": "https://github.com/jtebbens/Homewizard-Energy/issues"
  },
  "source": "https://github.com/jtebbens/Homewizard-Energy",
  "homeyCommunityTopicId": 34663,
  "flow": {
    "triggers": [
      {
        "id": "power_used_changed",
        "title": {
          "en": "Power used changed",
          "nl": "Huidig vermogen veranderd"
        },
        "args": [
          {
            "name": "HomeWizard Energy",
            "type": "device",
            "filter": "driver_id=homewizard",
            "placeholder": {
              "en": "Which Homewizard Energy",
              "nl": "Welke Homewizard Energy"
            }
          }
        ],
        "tokens": [
          {
            "name": "power_used",
            "type": "number",
            "title": {
              "en": "Watt",
              "nl": "Watt"
            },
            "example": 15
          }
        ]
      }
    ]
  },
  "drivers": [
    {
      "id": "homewizard",
      "name": {
        "en": "HomeWizard Energy",
        "nl": "HomeWizard Energy"
      },
      "images": {
        "large": "drivers/homewizardenergy/assets/images/large.jpg",
        "small": "drivers/homewizardenergy/assets/images/small.jpg"
      },
      "class": "sensor",
      "capabilities": [
        "measure_power.active_power_w",
        "meter_gas",
        "meter_power.consumed.t1",
        "meter_power.produced.t1",
        "meter_power.consumed.t2",
        "meter_power.produced.t2"
      ],
      "energy": {
        "cumulative": true
      },
      "capabilitiesOptions": {
        "measure_power.active_power_w": {
          "title": {
            "en": "Current usage all phases",
            "nl": "Huidig gebruik alle fases"
          }
        },
        "meter_power.consumed.t1": {
          "title": {
            "en": "Meter t1 value usage",
            "nl": "Meter t1 waarde gebruik"
          }
        },
        "meter_power.produced.t1": {
          "title": {
            "en": "Meter t1 value deliver",
            "nl": "Meter t1 waarde teruglevering"
          }
        },
        "meter_power.consumed.t2": {
          "title": {
            "en": "Meter t2 value usage",
            "nl": "Meter t2 waarde gebruik"
          }
        },
        "meter_power.produced.t2": {
          "title": {
            "en": "Meter t2 value deliver",
            "nl": "Meter t2 waarde teruglevering"
          }
        }
      },
      "pair": [
        {
          "id": "start"
        },
        {
          "id": "list_my_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_my_devices"
          }
        },
        {
          "id": "add_my_devices",
          "template": "add_devices"
        }
      ],
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "HomeWizard Energy settings",
            "nl": "HomeWizard Energy instellingen"
          },
          "children": [
            {
              "id": "homewizard_ip",
              "type": "text",
              "label": {
                "en": "IP address",
                "nl": "IP adres"
              },
              "value": ""
            },
            {
              "id": "homewizard_ledring",
              "type": "checkbox",
              "label": {
                "en": "Use ledring",
                "nl": "Gebruik ledring"
              },
              "value": false
            }
          ]
        }
      ]
    }
  ],
  "permissions": [
    "homey:manager:ledring"
  ]
}
