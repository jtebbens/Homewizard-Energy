            "filter": "driver_id=energylink",
            "placeholder": {
              "en": "Which energylink",
              "nl": "Welke energylink"
            }
          }
        ],
        "tokens": [
          {
            "name": "power_s2",
            "type": "number",
            "title": {
              "en": "Watt",
              "nl": "Watt"
            },
            "example": 15
          }
        ]
      },
      {
