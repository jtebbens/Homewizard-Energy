  "flow": {
    "triggers": [
      {
        "id": "power_used_changed",
        "title": {
          "en": "Power used changed",
          "nl": "Huidig vermogen veranderd"
        },
        "args": [
          {
            "name": "Energylink",
            "type": "device",
            "filter": "driver_id=energylink",
            "placeholder": {
              "en": "Which energylink",
              "nl": "Welke energylink"
            }
          }
        ],
        "tokens": [
          {
            "name": "power_used",
            "type": "number",
            "title": {
              "en": "Watt",
              "nl": "Watt"
            },
            "example": 15
          }
        ]
      },
      {
        "id": "power_s1_changed",
        "title": {
          "en": "Power production changed",
          "nl": "Huidige productie veranderd"
        },
        "args": [
          {
            "name": "Energylink",
            "type": "device",
            "filter": "driver_id=energylink",
            "placeholder": {
              "en": "Which energylink",
              "nl": "Welke energylink"
            }
          }
        ],
        "tokens": [
          {
            "name": "power_s1",
            "type": "number",
            "title": {
              "en": "Watt",
              "nl": "Watt"
            },
            "example": 15
          }
        ]
      },
      {
        "id": "power_s2_changed",
